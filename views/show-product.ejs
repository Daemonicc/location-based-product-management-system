<%- include ("partials/header") %>
  <div class="row d-flex">
    <div class="col-6">
      <img src="data:image/<%=product.img.contentType%>;base64,<%=product.img.data.toString('base64')%>"
        style="width: 80%; max-height: 50vh ;">
    </div>

    <div class="card mb-3  col-6 float right">
      <div class="card-body">
        <h5 class="card-title">
          <%= product.name %>
        </h5>
        <p class="card-text">
          <%= product.description%>
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Location: <%= product.location.formattedAddress%>
        </li>
        <li class="list-group-item"> Price: $<%= product.amount%>
        </li>
        <li class="list-group-item"> Uploaded By: <%= product.user.firstname%>
            <%=product.user.lastname%>
        </li>
        <li class="list-group-item"> Seller's Number: $<%= product.user.phone%>
        </li>
      </ul>

    </div>

  </div>

  <div class="col-6 align-items-center" style="margin: auto; padding: 3rem;">
    <div id='map'></div>

    <h2>Leave a Review</h2>
    <form action="/<%=product._id%>/review" method="POST" class="mb-3 validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="body">Review Text</label>
        <textarea class="form-control" name="body" id="body" cols="30" rows="3" required></textarea>

      </div>
      <button class="btn btn-success">Submit</button>
    </form>

    <% for(let review of product.reviews) { %>
      <div class="card mb-3 ">
        <div class="card-body">
          <h5 class="card-title">
            <%= review.author.firstname%>
              <%= review.author.lastname%>
          </h5>
          <!-- <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username%></h6> -->
          <p class="card-text">Review: <%= review.body %>
          </p>
        </div>
      </div>
      <% } %>

  </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
    integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
    integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG"
    crossorigin="anonymous"></script>
  </body>

  </html>